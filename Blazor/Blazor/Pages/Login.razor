@page "/login"
@using System.ComponentModel.DataAnnotations

<PageTitle>Login</PageTitle>

<div class="login-page">
    <div class="login-card">
        <h2>Sign in</h2>

        <EditForm Model="model" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="username">Username</label>
                <InputText id="username" class="form-control" @bind-Value="model.Username" placeholder="Enter username" />
                <ValidationMessage For="@(() => model.Username)" class="validation-message" />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <InputText id="email" type="email" class="form-control" @bind-Value="model.Email" placeholder="name@example.com" />
                <ValidationMessage For="@(() => model.Email)" class="validation-message" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="Password" />
                <ValidationMessage For="@(() => model.Password)" class="validation-message" />
            </div>

            <button type="submit" class="btn-primary">Login</button>
        </EditForm>

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="success">@successMessage</div>
        }
    </div>
</div>

@code {
    private LoginModel model = new();

    private string? successMessage;

    private void HandleValidSubmit()
    {
        // Demo - Później do uzupełnienia
        successMessage = $"Welcome, {model.Username}!";
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Username is required")]
        [MinLength(5, ErrorMessage = "Minimum 5 characters")]
        public string? Username { get; set; }

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string? Email { get; set; }

        [Required(ErrorMessage = "Password is required")]
        [MinLength(8, ErrorMessage = "Minimum 8 characters")]
        public string? Password { get; set; }
    }
}